<Window x:Class="GameEngine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameEngine"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <StackPanel x:Name="menuString" DockPanel.Dock="Top" Height="25" Background="Red">
            
        </StackPanel>

        <StackPanel x:Name="hierarchy" DockPanel.Dock="Left" Width="150" Background="Pink">
            <StackPanel>
                <TextBlock Text="Персонаж" />
                <TextBlock Text="Персонаж" />
            </StackPanel>
        </StackPanel>
        <StackPanel x:Name="inspector" DockPanel.Dock="Right" Width="150" Background="Blue">

        </StackPanel>
        <StackPanel x:Name="project" DockPanel.Dock="Bottom" Height="100" Background="Green">

        </StackPanel>
        <StackPanel x:Name="scene" DockPanel.Dock="Bottom" Background="Orange">
            
        </StackPanel>
        
    </DockPanel>
</Window>
